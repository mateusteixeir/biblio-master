<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3" author="Mateus Soares">
        <createTable tableName="genero_livros">
            <column name="id_livro" type="BIGINT">
                <constraints  nullable="false"/>
            </column>
            <column name="id_genero" type="BIGINT">
                <constraints  nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="genero_livros"
            baseColumnNames="id_livro"
            referencedTableName="livros"
            referencedColumnNames="id"
            constraintName="fk_genero_livros_livros"
        />

        <addForeignKeyConstraint
            baseTableName="genero_livros"
            baseColumnNames="id_genero"
            referencedTableName="generos"
            referencedColumnNames="id"
            constraintName="fk_genero_livros_generos"/>
    </changeSet>
</databaseChangeLog>
